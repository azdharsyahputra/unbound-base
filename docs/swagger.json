                }
            }
        },
        "internal_post.UpdateCommentRequest": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string",
                    "example": "Updated comment content"
                }
            }
        },
        "internal_post.UpdatePostRequest": {
            "type": "object",
            "properties": {
